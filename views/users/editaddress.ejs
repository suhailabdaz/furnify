<body>

  <!-- Your existing navigation code -->
  <%-include('userpartials/nav')%>

  <!-- Edit Profile Form -->
<!-- Edit Profile Form -->
<div class="suso container mt-4">
    <div class="edit-profile-form">
      <h2>Edit Your <%= addressToEdit.saveas %> Address</h2>
  
      <form action="/updateaddress/<%= addressToEdit._id %>" method="post" class="row">
        <!-- Personal details -->

        <div class="form-group col-md-6">
            <label for="saveas">Save as</label>
            <input type="text" id="saveas" name="saveas" value="<%= addressToEdit.saveas %>" class="form-control">
            <% if(expressFlash.saveaserror){ %>
              <div class="alert text-danger text-start" style="color: red;"><%= expressFlash.saveaserror %></div>
          <% } %>
          </div>
        <div class="form-group col-md-6">
          <label for="fullname">Full Name</label>
          <input type="text" id="fullname" name="fullname"value="<%= addressToEdit.fullname %>" class="form-control">
          <% if(expressFlash.fullnameerror){ %>
            <div class="alert text-danger text-start" style="color: red;"><%= expressFlash.fullnameerror %></div>
        <% } %>
        </div>
  
        <div class="form-group col-md-6">
          <label for="adname">House Name / Flat No</label>
          <input type="text" id="adname" name="adname" value="<%= addressToEdit.adname %>" class="form-control">
          <% if(expressFlash.adnameerror){ %>
            <div class="alert text-danger text-start" style="color: red;"><%= expressFlash.adnameerror %></div>
        <% } %>
        </div>
  
        <div class="form-group col-md-6">
          <label for="street">Street</label>
          <input type="text" id="street" name="street"value="<%= addressToEdit.street %>" class="form-control">
          <% if(expressFlash.streeterror){ %>
            <div class="alert text-danger text-start" style="color: red;"><%= expressFlash.streeterror %></div>
        <% } %>
        </div>
  
        <div class="form-group col-md-6">
          <label for="pincode">Pincode</label>
          <input type="number" id="pincode" name="pincode" value="<%= addressToEdit.pincode %>"class="form-control">
          <% if(expressFlash.pincodeerror){ %>
            <div class="alert text-danger text-start" style="color: red;"><%= expressFlash.pincodeerror %></div>
        <% } %>
        </div>
  
        <div class="form-group col-md-6">
          <label for="city">City</label>
          <input type="text" id="city" name="city" value="<%= addressToEdit.city %>"class="form-control">
          <% if(expressFlash.cityerror){ %>
            <div class="alert text-danger text-start" style="color: red;"><%= expressFlash.cityerror %></div>
        <% } %>
        </div>
  
        <div class="form-group col-md-6">
          <label for="state">State</label>
          <select id="state" name="state" class="form-control" required>
            <option value="" disabled selected>Select a state</option>
            <option value="Kerala">Kerala</option>
            <option value="Karnataka">Karnataka</option>
            <option value="TamilNadu">Tamil Nadu</option>
          </select>
          </div>
      
          <div class="form-group col-md-6">
          <label for="country">Country</label>
          <select id="country" name="country" class="form-control" required>
            <option value="India">India</option>
          </select>
          </div>
  
        <div class="form-group col-md-6">
          <label for="phone">Phone Number</label>
          <input type="number" id="phone" name="phone" value="<%= addressToEdit.phonenumber %>" class="form-control">
          <% if(expressFlash.phoneerror){ %>
            <div class="alert text-danger text-start" style="color: red;"><%= expressFlash.streeterror %></div>
        <% } %>
        </div>
  
        <div class="form-group col-12">
          <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
      </form>
    </div>
  </div>
  
 <%-include('userpartials/footer')%>

