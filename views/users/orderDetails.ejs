                <a style="background-color: rgb(181, 0, 0);width: 350px;" href="/cancelorder/<%=order._id%>" class="btn btn-danger">Cancel Order</a>
                <% } else if (order.status === 'Delivered') { %>
                    <!-- Code to execute if the condition is false -->
                    <a style="background-color: rgb(181, 0, 0);width: 350px;" href="/returnorder/<%=order._id%>" class="btn btn-danger">Retrur Order</a>
                    <% } %>
            
            </div>
        </div>
        
        
