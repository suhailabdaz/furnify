        cancelButtonColor: "#d33",
        confirmButtonText: "Confirm",
        cancelButtonText: "Cancel",  
        dangerMode: true,
    })
    .then((result) => {
        if (result.isConfirmed) {
            window.location.href = route;
        } else {
            console.log("Banner deleted");
        }
    });
}


