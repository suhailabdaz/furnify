		<style>
			.sorting-filtering-options {
    display: flex;
}

.sorting-options select,
.filtering-options select {
    width: 200px;
    height: 60px;
    background-color: #3b5d50;
    color: #efeeee;
    border: 4px solid #efeeee;
    border-radius: 15px;
    margin-right: 10px;
}

.sorting-options select {
    margin-right: 15px;
}

.sorting-options select option,
.filtering-options select option {
    background-color: #3b5d50;
    color: #efeeee;
	font-size: 25px;
	font-weight: 400;
}
.sorting-options select option[disabled][selected],
.filtering-options select option[disabled][selected] {
    background-color: #3b5d50;
    color: #3b5d50;
	
}

		.category-options {
		  display: none;
		}
		.search-bar {
		  background-color: #3b5d50;
		  display: flex;
		  align-items: center;
		  justify-content: center;
		  height: 35px;
		  margin: 0;
		  display: flex;
		  border: 2px solid #efeeee;
		  border-radius: 30px;
		  overflow: hidden;
		}
	
		.search-input {
		  border: none;
		  padding: 10px;
		  width: 800px;
		  background-color: #3b5d50;
		  color: white;
		}
	
		.search-button {
		  background-color: #3d5d50;
		  color: white;
		  border: none;
		  padding: 10px;
		  border-top-right-radius: 20px;
		  border-bottom-right-radius: 20px;
		  cursor: pointer;
		}
	  </style>
	


		<!-- Start Header/Navigation -->
		<%-include('userpartials/nav')%>
